extends layout

block content
    main
        //checking if user is logged in or not
        if(!user)
            h1 You must login to Update any item
        else
            h1 Update Item below
            //Update form
            form(method='POST' action='/update')
                div
                    h2 Insert Title
                    input(type= 'text' name= 'name' value= article.name)
                div
                    h2 Description
                    input(type= 'text' name= 'description' value= article.description)
                div
                    h2 Price
                    input(type= 'text' name= 'price' value= article.price)
                div
                    input(type= 'hidden' name= 'id' value= article.id)
                    button(type= 'submit' value= 'Submit') Submit