extends layout

block content
    main(class= "login")
      h1 Login Page
      //form for login page
      form(method='POST' action='/login')
        fieldset
            //getting username
            label(for='username') Username
            input#username(type='text' name='username')
        fieldset
            //getting password
            label(for='password') Password
            input#password(type='password' name='password')
        input(type='submit' value='Login')
